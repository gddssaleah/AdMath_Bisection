a = input('Please insert the interval a: ');
b = input('Please insert the interval b: ');
e = input('Please insert the error tolerance, e: ');

%formulas
fa = exp(-a)-ln(a);
fb = exp(-b)-ln(b);
if (fa>fb <0)
    k = 0;
    c = (a+b)/2;
    while error > e
        e = exp(-c) - ln(c);
        if e < 0 
            e = a;
        else 
            e = b;
        end
    k = k + 1;
    end    
    fprintf('The approximated value of x is %.f with %.f iterations made and an error tolerance of %.f',cke)
else
    disp('Error interval')
end
